<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8sp" />
            <stroke android:width="50sp" android:color="#F4040D" />
            <gradient android:angle="-90" android:startColor="#FF4900" android:endColor="#FF9800"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8sp" />
            <stroke android:width="1dip" android:color="#FF5722" />
            <solid android:color="#FFEB3B"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="8sp" />
            <stroke android:width="5sp" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="@color/black" android:endColor="#FFFFFF" />
        </shape>
    </item>
</selector>